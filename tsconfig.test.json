{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node"],
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "jest.setup.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "cms/src/**/*.ts",
    "cms/src/**/*.tsx"
  ]
}
